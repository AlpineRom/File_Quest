<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/popup_black" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout 
        android:orientation="horizontal" 
        android:paddingLeft="10.0dip" 
        android:paddingTop="15.0dip" 
        android:paddingBottom="10dp"
        android:layout_width="fill_parent" 
        android:layout_height="0.0dip" 
        android:layout_weight="1">
        
        <ImageView 
            android:id="@+id/longClickDialogIcon" 
            android:background="@drawable/ic_launcher_file_task" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_weight="5.0" />
        
        <TextView 
            android:textStyle="bold"
            android:gravity="center_vertical" 
            android:id="@+id/longClickDialogTitle" 
            android:paddingLeft="10.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:text="LongClick" 
            android:layout_weight="1.0" />
    </LinearLayout>
    
    <LinearLayout 
        android:padding="5dp"
        android:background="#ff33b5e5" 
        android:layout_width="fill_parent" 
        android:layout_height="3.0dip" 
        />
    
    <LinearLayout 
        android:paddingLeft="10.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="0.0dip" 
        android:baselineAligned="false" 
        android:layout_weight="5.0">
        
        <ListView 
            android:id="@android:id/list" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:listSelector="@drawable/background" 
            android:divider="#ff242424" 
            android:dividerHeight="0.5dip" 
            android:minHeight="10.0dip" />
    </LinearLayout>
</LinearLayout>
