<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:weightSum="7"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" 
    android:background="@drawable/popup_black" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout 
        android:orientation="horizontal" 
        android:paddingLeft="10.0dip"
        android:paddingTop="10.0dip" 
        android:layout_width="fill_parent"
        android:layout_gravity="center_vertical" 
        android:layout_height="0dp" 
        android:layout_weight="4.5">
        <ImageView 
            android:id="@+id/infoIcon"
            android:gravity="center_vertical" 
            android:layout_width="45.0dip" 
            android:layout_height="45.0dip" />
        <TextView 
            android:id="@+id/infoName"
            android:gravity="center_vertical"
            android:textStyle="bold" 
            android:paddingLeft="10.0dip" 
            android:paddingTop="15.0dip" 
            android:textSize="15dip"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="About Me And My App" />
    </LinearLayout>
    
    <LinearLayout 
        android:background="#ff33b5e5" 
        android:layout_width="fill_parent" 
        android:layout_height="3dp" 
         />
    	 <TextView 
    	       android:id="@+id/developer"	
         	   android:gravity="center_vertical"
         	   android:textStyle="bold" 
         	   android:paddingLeft="10.0dip" 
         	   android:layout_width="wrap_content" 
          	   android:layout_height="wrap_content" 
          	   android:textSize="20dip"
          	   android:text="Developer" />
    	 
    	 <TextView 
    	       android:id="@+id/copyright"
    	       android:singleLine="true"
         	   android:gravity="center_vertical"
         	   android:textStyle="bold" 
         	   android:paddingLeft="10.0dip" 
         	   android:layout_width="wrap_content" 
          	   android:layout_height="wrap_content" 
          	   android:text="     Copyright 2013" />
    	 
    	 <TextView 
    	       android:id="@+id/name"
    	       android:singleLine="true"
         	   android:gravity="center_vertical"
         	   android:textStyle="bold" 
         	   android:paddingLeft="10.0dip" 
         	   android:layout_width="wrap_content" 
          	   android:layout_height="wrap_content" 
          	   android:text="     ANURAG" />
    	 
    	 
    	 <TextView 
    	       android:id="@+id/version"
         	   android:gravity="center_vertical"
         	   android:textStyle="bold" 
         	   android:paddingLeft="10.0dip" 
         	   android:paddingTop="5.0dip" 
          	   android:layout_width="wrap_content" 
          	   android:layout_height="wrap_content"
          	   android:textSize="20dip" 
          	   android:text="Version" />
    	 <TextView 
    	       android:id="@+id/versionCode"
         	   android:gravity="center_vertical"
         	   android:textStyle="bold" 
         	   android:paddingLeft="10.0dip" 
         	   android:layout_width="wrap_content" 
          	   android:layout_height="wrap_content" 
          	   android:text="     0.0.9" />
    	 
    	 <TextView 
         	   android:id="@+id/size"
         	   android:gravity="center_vertical"
         	   android:textStyle="bold" 
         	   android:paddingLeft="10.0dip" 
         	   android:paddingTop="5.0dip" 
          	   android:layout_width="wrap_content" 
          	   android:layout_height="wrap_content"
          	   android:textSize="20dip" 
          	   android:text="Released Status" />
    	 <TextView 
    	       android:id="@+id/sizeLenth"
         	   android:gravity="center_vertical"
         	   android:textStyle="bold" 
         	   android:paddingLeft="10.0dip" 
          	   android:layout_width="wrap_content" 
          	   android:layout_height="wrap_content" 
          	   android:text="     Experimental-Beta" />
    
    	  <TextView 
    	       android:id="@+id/packageT"
         	   android:gravity="center_vertical"
         	   android:textStyle="bold" 
         	   android:paddingLeft="10.0dip" 
         	   android:paddingTop="5.0dip" 
          	   android:layout_width="wrap_content" 
          	   android:layout_height="wrap_content"
          	   android:textSize="20dip" 
          	   android:text="License" />
    	 <TextView 
    	       android:id="@+id/pName"
    	       android:singleLine="true"
         	   android:gravity="center_vertical"
         	   android:textStyle="bold" 
         	   android:paddingLeft="10.0dip" 
         	   android:layout_width="wrap_content" 
          	   android:layout_height="wrap_content"
          	   android:text="     Apache v2.0" />
    	 
    	 <TextView 
         	   android:id="@+id/process"
         	   android:gravity="center_vertical"
         	   android:textStyle="bold" 
         	   android:paddingLeft="10.0dip" 
         	   android:paddingTop="5.0dip" 
          	   android:layout_width="wrap_content" 
          	   android:layout_height="wrap_content"
          	   android:textSize="20dip" 
          	   android:text="Contact" />
    	 <TextView 
    	      android:id="@+id/proName"
    	      android:singleLine="true"
         	   android:gravity="center_vertical"
         	   android:textStyle="bold" 
         	   android:paddingLeft="10.0dip" 
         	   android:layout_width="wrap_content" 
          	   android:layout_height="wrap_content"
          	   android:text="     anurag.dev1512@gmail.com" />
    	
    	 
    	 
   
</LinearLayout>

