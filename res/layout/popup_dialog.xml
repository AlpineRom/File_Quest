<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/popup_black" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/popupImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            />
        <TextView 
            android:id="@+id/popupTitle"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout 
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#ff33b5e5" 
        android:layout_width="fill_parent" 
        android:layout_height="3.0dip" 
        />
    
    <LinearLayout 
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:orientation="horizontal"
        android:layout_gravity="center" >
        <TextView 
            android:padding="10dp"
            android:id="@+id/textMessage"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:text="fsadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ProgressBar 
                android:paddingLeft="5dp"
             	android:visibility="gone"
                android:id="@+id/popupProgress" 
                android:layout_width="20dp" 
                android:layout_height="20dp" />
    
        
        <TextView 
            android:padding="10dp"
            android:id="@+id/textMessage2"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
      
    <LinearLayout 
        android:paddingTop="20dp"
        android:background="#ff33b5e5" 
        android:layout_width="fill_parent" 
        android:layout_height="3.0dip" 
         />
    
    <LinearLayout 
        android:paddingTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">
        <Button 
            android:textColor="@android:color/white"
            android:background="@drawable/action_item_btn"
            android:onClick="onClick"
            android:id="@+id/popupOk" 
            android:layout_width="fill_parent" 
            android:layout_height="30dp" 
            android:text="Yes" 
            android:layout_weight="1.0" />
        <Button 
            android:textColor="@android:color/white"
            android:background="@drawable/action_item_btn"
            android:onClick="onClick"
            android:id="@+id/popupCancel" 
            android:layout_width="fill_parent" 
            android:layout_height="30dp" 
            android:text="No" 
            android:layout_weight="1.0" />
        
    </LinearLayout>
    

</LinearLayout>